                <img src="https://yld.me/cAYU" style="height: 50px; width: auto; margin-right: 2rem; transform: scale(0.75);" alt="dorm logo">
            </div>
            <div></div>
        </div>
        <div class="pill-subcontainer" style="margin-bottom: 0;">
            <div class="numbers"><p>#9</p></div>
            <div class="pill-other">
                <p style="margin-left:2rem;  margin-top: 1rem; margin-top: 0.75rem; color: white;">St. Edward's Hall</p>
                <img src="https://yld.me/e8DJ" style="height: 50px; width: auto; margin-right: 2rem; transform: scale(0.75);" alt="dorm logo">
            </div>
            <div></div>
        </div>
       
    </div>

    <%- include ('../partials/footer.ejs') %>
</body>
</html>
